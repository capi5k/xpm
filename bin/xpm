#!/usr/bin/env ruby

require "thor"
require "xpm"



  class Cache < Thor

    desc "clean", "Clean cached packages"
    def clean()
      XPM.config.depmanager.new.cacheclean()
    end

    desc "list", "List cached packages"
    def list()
      XPM.config.depmanager.new.cachelist()
    end
  end


  class XPMCli < Thor

    # This create a simple project (not a module)
    # It is introduced in v 0.0.6 since I realized that self contained projects
    # are easier to maintain and more reusable...
    desc "init [NAME]", "Create a new xp5k project called NAME in the current directory"
    def init(name)
      xp = XPM::XP.new()
      xp.init(name)
    end
  
    # This create a new module project (legacy)
    desc "new [NAME]", "Create a new module project called NAME in the current directory"
    option :packages
    def new(name)
      xp = XPM::XP.new()
      xp.new(name, :packages => options[:packages])
    end

    desc "install [package]", "Install a package locally" 
    def install(package=nil)
      XPM.config.depmanager.new.install(package)
    end

    desc "link [package]", "Symlink a package folder"
    def link(package=nil)
      XPM.config.depmanager.new.link(package)
    end

    desc "export", "Perform the exports from existing installed packages"
    def export()
      XPM.config.depmanager.new.export()
    end

    desc "version", "gives the current version"
    def version
      puts XPM::VERSION
    end

    desc "cache", "Manage cache "
    subcommand "cache", Cache
  end

XPMCli.start(ARGV)
